<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangChuActivity">

    <ImageView
        android:id="@+id/imgNguoiDung"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTheLoai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTheLoai"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/emthree" />

    <ImageView
        android:id="@+id/imgTheLoai"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toEndOf="@+id/imgNguoiDung"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cateicon" />

    <ImageView
        android:id="@+id/imgSach"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@mipmap/bookicon" />

    <ImageView
        android:id="@+id/imgHoaDon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toEndOf="@+id/imgSach"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@mipmap/hdicon" />

    <ImageView
        android:id="@+id/imgSachBanChay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@mipmap/money_icon" />

    <ImageView
        android:id="@+id/imgDoanhSo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/imgSachBanChay"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@mipmap/thongke" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Người dùng"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNguoiDung" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"

        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Thể loại"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imgTheLoai" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Sách"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSach" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Hóa đơn"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imgHoaDon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Sách bán chạy"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSachBanChay" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Doanh số"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imgDoanhSo" />
</androidx.constraintlayout.widget.ConstraintLayout>